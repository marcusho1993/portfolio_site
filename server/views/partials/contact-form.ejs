<!-- Contact Form -->
<form id="contact-form" onsubmit="SendMessage()">
  <div class="h4 col-12">or</div>
  <div class="form-row justify-content-center">
    <div class="form-group col-lg-5 col-md-8">
      <input type="text" class="form-control" id="name" placeholder="Your Name*" required>
      <input type="email" class="form-control" id="email" placeholder="Your Email*" required>
      <input type="tel" class="form-control" id="phone" placeholder="Phone Number">
    </div>
    <div class="form-group col-lg-5 col-md-8">
      <textarea class="form-control" name="message" id="message" placeholder="Message*" required></textarea>
    </div>
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Send</button>
  <button type="reset" class="btn btn-lg btn-secondary">Reset</button>
</form>