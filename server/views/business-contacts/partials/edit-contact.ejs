<div class="row justify-content-md-center">
  <div class="col-md-5 col-sm-10">
    <form method="POST">

      <div class="form-group">
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter Component Name"
          value="<%=data.name %>" required>
      </div>

      <div class="form-group">
        <input type="tel" class="form-control" id="number" name="number"
          placeholder="Enter Phone Number eg. 123-456-7890" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
          value="<%=data.number %>" required>
      </div>

      <div class="form-group">
        <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email"
          value="<%=data.email %>" required>
      </div>

      <div class="row">
        <div class="col-12 text-left"><small>*required phone format: 123-456-1234</small></div>
      </div>

      <button type="submit" class="btn btn-info btn-lg"><i class="fas fa-edit"></i>Update</button>
      <a href="/contact-list/delete/<%= data._id %>" class="btn btn-danger btn-lg">
        <i class="fas fa-trash-alt"></i>Delete</a>
      <a href="/contact-list" class="btn btn-warning btn-lg"><i class="fas fa-undo"></i>Cancel</a>

    </form>

  </div>
</div>