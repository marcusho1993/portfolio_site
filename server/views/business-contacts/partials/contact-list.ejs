<% if(typeof displayName == 'string' && displayName) { %>
<a href="/contact-list/add" class="btn btn-info btn-lg"><i class="fas fa-plus-circle"></i> Add New Contact</a>
<% } %>
<hr>

<table class="table table-sm table-hover table-responsive-md">
  <thead>
    <tr class="table-info">
      <th>#</th>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% let i = 1; %>
    <% contacts.forEach(contact => { %>
    <tr class="table-active">
      <td scope="row"><%= i %></th>
      <td><%= contact.name %></td>
      <td><%= contact.number %></td>
      <td><%= contact.email %></td>
      <td class="align-text-top">
        <a href="/contact-list/edit/<%= contact._id %>" class="btn btn-primary btn-sm m-0">
          <i class="fas fa-edit"></i></a>
      </td>
      <td class="align-text-top">
        <a href="/contact-list/delete/<%= contact._id %>" class="btn btn-danger btn-sm m-0">
          <i class="fas fa-trash-alt"></i></a>
      </td>
    </tr>
    <% i++; %>
    <% }) %>
  </tbody>
</table>