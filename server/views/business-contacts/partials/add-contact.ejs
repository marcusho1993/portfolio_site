<div class="row justify-content-md-center">
  <div class="col-md-6 col-sm-10">

    <form method="POST">

      <div class="form-group">
        <input type="text" class="form-control" id="name" aria-describedby="name" name="name"
          placeholder="Enter Contact Name" required>
      </div>

      <div class="form-group">
        <input type="tel" class="form-control" id="number" rows="3" name="number" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
          placeholder="Enter Phone Number eg. 123-456-7890" required>
      </div>

      <div class="form-group">
        <input type="email" class="form-control" id="email" aria-describedby="price" name="email"
          placeholder="Enter Email" required>
      </div>

      <div class="row">
        <div class="col-12 text-left"><small>*required phone format: 123-456-1234</small></div>
      </div>
      
      <button type="submit" class="btn btn-info btn-lg"><i class="fas fa-plus-circle"></i>Add</button>
      <a href="/contact-list" class="btn btn-warning btn-lg"><i class="fas fa-undo"></i>Cancel</a>
    </form>

  </div>
</div>